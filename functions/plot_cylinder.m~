
% 
%function [] = plot_frame_str(H,str,len,wid,fontsize)
%
%H - homogeneous transformation
%str - String with the name of the frame
%len - Length of the plot
%wid - Width of the line
%fontsize - Font size of the string

%Written by: Adriano Rezende

function [] = plot_cylinder(H,height,radius,color,alpha,n)
% function plot_frame_str(p,q,str,)


    theta = linspace(0,2*pi,n);
    
    tb = [radius*cos(theta); radius*sin(theta); 0*theta-height; 0*theta+1];
    tt = [radius*cos(theta); radius*sin(theta); 0*theta+height; 0*theta+1];
    
    
    tb = H*tb;
    tt = H*tt;
    
    fill3(tb(1,:),tb(2,:),tb(3,:),'w','FaceColor',color,'FaceAlpha',alpha)
    fill3(tt(1,:),tt(2,:),tt(3,:),'w','FaceColor',color,'FaceAlpha',alpha)
    
    for k = 1:1:(n-1)
        fill3([tb(1,k) tb(1,k+1) tt(1,k+1) tb(1,k)],[],[],'w','FaceColor',color,'FaceAlpha',alpha)
    end
%     
%     x = [[0 1]*len;[0 0];[0 0];[1 1]];
%     y = [[0 0];[0 1]*len;[0 0];[1 1]];
%     z = [[0 0];[0 0];[0 1]*len;[1 1]];
% 
%     z_str = [0;0;1.5*len;1];
% 
%     x = H*x; x(4,:) = [];
%     y = H*y; y(4,:) = [];
%     z = H*z; z(4,:) = [];
%     z_str = H*z_str; z_str(4,:) = [];
% 
% 
% 
%     plot3(x(1,:),x(2,:),x(3,:),'r','LineWidth',wid)
%     plot3(y(1,:),y(2,:),y(3,:),'g','LineWidth',wid)
%     plot3(z(1,:),z(2,:),z(3,:),'b','LineWidth',wid)
% 
%     text(z_str(1,:),z_str(2,:),z_str(3,:),str,'FontSize',fontsize,'interpreter','latex')



end
